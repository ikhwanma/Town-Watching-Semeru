<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TownWatchingSemeru" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1B4967</item>
        <item name="colorPrimaryVariant">@color/blue_stw</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1B4967</item>
        <item name="colorSecondaryVariant">@color/blue_stw</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/style_bottom_sheet</item>
    </style>

    <style name="TextViewSemeru">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextViewSemeru.bold">
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="TextViewSemeru.thin">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="FormSemeru">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/style_box_rounded</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="ButtonSemeru">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_button_rounded</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>